@model IEnumerable<SchwimmbadLib.Schwimmbahn>

@{
    ViewBag.Title = "Index";
}

<h2>Übersicht über alle vorhandenen Schwimmbahnen</h2>
<div>
    @Html.ActionLink("Weitere Schwimmbahnen anlegen", "Create", "Schwimmbahns")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Schwimmbahnnummer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Schwimmbahnnummer)
        </td>
        <td>
            @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id })  |
            @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
        </td>
    </tr>

}
</table>

<div>
    @Html.ActionLink("Zur Mitarbeiteransicht", "Mitarbeiter", "Home")
</div>
